{
	"name": "CloudGripper Api",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile"
	},

	"features": {
		"ghcr.io/devcontainers/features/nvidia-cuda:1.2.0": {}
	},

	"runArgs": [
		"--gpus",
		"all",
		"--privileged"
	],

	"customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff"
			]
		}
	},

	 "mounts": [
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
	  ],
	
	 "containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}"
	},

	"postCreateCommand": "bash .devcontainer/install-tools.sh",

}
