{
	"name": "CloudGripper API",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--gpus",
		"all"
	],
	"mounts": [
	    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
	],
	"containerEnv": {
	    "DISPLAY": "${localEnv:DISPLAY}"
	},
	"postCreateCommand": "export PATH='$PATH:/opt/nvim/'"
}
