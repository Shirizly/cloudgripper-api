{
"name": "CloudGripper API",
"build": { 
	"context": "..",
	"dockerfile": "Dockerfile"
},


"appPort": [ 3003, 5093,"6082:6082"],

  "forwardPorts": [6081],
  "portsAttributes": {
    "6081": {
      "label": "desktop"
    }
  },


  "features": {
    "ghcr.io/devcontainers-extra/features/fish-apt-get:1": {},
    "ghcr.io/devcontainers/features/desktop-lite:1": {
     "password": "noPassword",
     "webPort" : "6081",
     "vncPort" : "5091"
   }
  },

  "customizations": {
    "vscode": {
    "extensions": [
      "ms-python.python",
      "charliermarsh.ruff",
      "ms-toolsai.jupyter",
      "HenryTsz.nvim",
      "ms-azuretools.vscode-docker"
    ]

    }
  },

"runArgs": [
	"--gpus",
	"all",
	//"--privileged"
],


